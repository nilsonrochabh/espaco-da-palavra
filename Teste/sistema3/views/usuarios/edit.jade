extends ../layout

block content
	h1 Atualizar usuario
	hr
	br
	if messages.erro
		div(class="alrt alert-danger")
			each msg in messages.erro
			b=msg
			br
		br
	form(method="POST", action="/usuarios/edit/#{dados._id}", role="form")
		
		div(class="form-group")
			label Nome
			input(type="text", class="form-control", name="nome", placeholder="Nome" value="#{dados.nome}" required)
		
		div(class="form-group")
			label Site
			input(type="text", class="form-control", name="site", placeholder="Site", value="#{dados.site}")
		
		div(class="form-group")
			label Email
			input(type="text", class="form-control", name="email", placeholder="Email", value="#{dados.email}", disabled)
		
		button(type="submit", class="btn btn-success") Atualizar
	br
	br
	a(href="/usuarios") Voltar