extends ../layout

block content
	br
	br
	h1 #{dados.nome}
	hr
	p
		b E-mail: #{dados.email}
	p
		b Site: #{dados.site}
	p
		b Data de Cadastro: #{moment(dados.data_cad).format('DD/MM/YYYY HH:MM:ss')}

	br
	form(method="POST" action="/usuarios/delete/#{dados._id}" role="form", id="excluir-form")
		button(type="submit", class="btn btn-danger") Excluir
	br
	a(href="/usuarios") Voltar

block scripts
	script(type="text/javascript").
		$(function(){
			$('#excluir-form').submit(function(){
			var pergunta = confirm('deseja realmente excluir ?');
			if(!pergunta){
				return false;
			}

			});

		});